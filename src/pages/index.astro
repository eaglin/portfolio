						<IconTypescrip />
						<IconCss />
						<IconHtml />
						<IconAngular />
						<IconJava />
						<IconSpringBoot />
						<IconDocker />
						<IconRedis />
					</div>
				</ExperienceCard>

				<ExperienceCard
					href="https://astro.build/themes/"
					title="MyHixel"
					body="Aplicación móvil para ayudar a hombres con problemas de eyaculación precoz a mejorar su rendimiento sexual"
