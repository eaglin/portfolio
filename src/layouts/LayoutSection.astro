---
interface Props {
	title: string;
	ulLayoutClass?: string;
}
const { title, ulLayoutClass } = Astro.props;
const classLayout = ulLayoutClass
	? ulLayoutClass
	: "grid grid-cols-1 gap-2 md:grid-cols-2 py-6";
---

<section class="items-start self-start snap-center pt-12">
	<h3 class="text-4xl">{title}</h3>
	<ul role="list" class={classLayout}>
		<slot />
	</ul>
</section>
