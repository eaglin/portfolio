---
import Header from "../components/Header.astro";
import "../styles/global.css";
import GoogleFont from "./GoogleFont.astro";
import ThemeScript from "./ThemeScript.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="theme-bubblegum" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="theme-color" content="#ffffff" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="/favicon.ico" rel="shortcut icon" />
		<meta name="generator" content={Astro.generator} />

		<!-- //	<GoogleFont /> -->
		<GoogleFont />
		<ThemeScript />
		<title>{title}</title>
	</head>
	<body class="flex flex-col items-center justify-center relative">
		<div
			class="absolute w-full h-full top-0 left-0 backdrop-blur-sd bg-[url('/background.jpg')] animate-backgroundAnimate object-center"
		>
		</div>
		<Header />
		<slot />
	</body>
</html>
